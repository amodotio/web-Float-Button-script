<script>
function markHidden(btnNumber) {
  localStorage.setItem('hideBtn' + btnNumber, 'true');
  document.getElementById('btn' + btnNumber).style.display = 'none';
}

window.onload = function () {
  for (let i = 1; i <= 3; i++) {
    if (localStorage.getItem('hideBtn' + i) === 'true') {
      const btn = document.getElementById('btn' + i);
      if (btn) btn.style.display = 'none';
    }
  }
}
</script>
